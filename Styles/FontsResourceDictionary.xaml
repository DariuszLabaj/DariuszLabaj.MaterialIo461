<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <!-- Define Font Families -->
    <FontFamily x:Key="PrimaryFontFamily">Roboto</FontFamily>
    <FontFamily x:Key="SecondaryFontFamily">Roboto Light</FontFamily>

    <!-- Font Sizes -->
    <system:Double x:Key="FontSizeHeadline1">32</system:Double>
    <system:Double x:Key="FontSizeHeadline2">24</system:Double>
    <system:Double x:Key="FontSizeHeadline3">18</system:Double>
    <system:Double x:Key="FontSizeBody">14</system:Double>
    <system:Double x:Key="FontSizeCaption">12</system:Double>

    <!-- Font Weights -->
    <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>

    <!-- Text Styles -->
    <Style x:Key="Headline1Style" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeHeadline1}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    
    <Style x:Key="Headline2Style" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeHeadline2}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    
    <Style x:Key="Headline3Style" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeHeadline3}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="BodyStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
        <Setter Property="FontWeight" Value="Normal" />
    </Style>

    <Style x:Key="CaptionStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource SecondaryFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeCaption}" />
        <Setter Property="FontWeight" Value="Normal" />
    </Style>
</ResourceDictionary>