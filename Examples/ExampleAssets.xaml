<Page x:Class="DariuszLabaj.MaterialIo461.Examples.ExampleAssets"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DariuszLabaj.MaterialIo461.Examples"
      xmlns:mt="clr-namespace:DariuszLabaj.MaterialIo461.CustomUserControl"
      mc:Ignorable="d" 
      d:DesignHeight="1450" d:DesignWidth="730"
      Title="ExampleAssets">
    <Border Background="{DynamicResource surfaceBrush}">
        <WrapPanel HorizontalAlignment="Center">
            <mt:TextInput Label="Textfield" SupportingText="Supporting Text" Width="200"/>
            <Button Style="{DynamicResource FilledButton}" Content="Button" Tag="{StaticResource add_2_48px_svg}"/>
            <Button Style="{DynamicResource FilledButton}" Content="Button"/>
            <Button Style="{DynamicResource ElevatedButton}" Content="Button" Tag="{StaticResource info_fill1_48px_svg}"/>
            <Button Style="{DynamicResource ElevatedButton}" Content="Button"/>
            <Button Style="{DynamicResource OutlinedButton}" Content="Button" Tag="{StaticResource circle_fill1_48px_svg}"/>
            <Button Style="{DynamicResource OutlinedButton}" Content="Button"/>
            <Button Style="{DynamicResource TextButton}" Content="Button" Tag="{StaticResource check_box_fill1_48px_svg}"/>
            <Button Style="{DynamicResource TextButton}" Content="Button"/>

            <ComboBox SelectedIndex="0">
                <ComboBox.Items>
                    <ComboBoxItem>
                        <TextBlock Text="Test 1"/>
                    </ComboBoxItem>
                </ComboBox.Items>
            </ComboBox>

            <Border Style="{DynamicResource FilledCard}" Width="200">
                <StackPanel>
                    <TextBlock Text="Headline 1" Style="{DynamicResource Headline1Style}"/>
                    <TextBlock Text="Headline 2" Style="{DynamicResource Headline2Style}"/>
                    <TextBlock Text="Headline 3" Style="{DynamicResource Headline3Style}"/>
                    <TextBlock Text="Caption" Style="{DynamicResource CaptionStyle}"/>
                    <TextBlock Text="A quick brown fox jump over a lazy dog" TextWrapping="WrapWithOverflow"/>
                    <mt:TextInput Label="Textfield" SupportingText="Supporting Text" Text="TestField"/>
                    <ComboBox SelectedIndex="0">
                        <ComboBox.Items>
                            <ComboBoxItem>
                                <TextBlock Text="Test 1"/>
                            </ComboBoxItem>
                        </ComboBox.Items>
                    </ComboBox>
                    <ProgressBar Width="100" IsIndeterminate="True"/>
                    <ProgressBar Style="{DynamicResource CircularProgressIndicator}" IsIndeterminate="True"/>
                    <ToggleButton IsChecked="True"/>
                </StackPanel>
            </Border>
            <Border Style="{DynamicResource FilledCardSecondary}" Width="200">
                <StackPanel>
                    <TextBlock Text="Headline 1" Style="{DynamicResource Headline1Style}"/>
                    <TextBlock Text="Headline 2" Style="{DynamicResource Headline2Style}"/>
                    <TextBlock Text="Headline 3" Style="{DynamicResource Headline3Style}"/>
                    <TextBlock Text="Caption" Style="{DynamicResource CaptionStyle}"/>
                    <TextBlock Text="A quick brown fox jump over a lazy dog" TextWrapping="WrapWithOverflow"/>
                    <mt:TextInput Label="Textfield" SupportingText="Supporting Text" Text="TestField"/>
                    <ComboBox SelectedIndex="0">
                        <ComboBox.Items>
                            <ComboBoxItem>
                                <TextBlock Text="Test 1"/>
                            </ComboBoxItem>
                        </ComboBox.Items>
                    </ComboBox>
                    <ProgressBar Width="100" IsIndeterminate="True"/>
                    <ProgressBar Style="{DynamicResource CircularProgressIndicator}" IsIndeterminate="True"/>
                    <ToggleButton IsChecked="True"/>
                </StackPanel>
            </Border>
            <Border Style="{DynamicResource ElevatedCard}" Width="200">
                <StackPanel>
                    <TextBlock Text="Headline 1" Style="{DynamicResource Headline1Style}"/>
                    <TextBlock Text="Headline 2" Style="{DynamicResource Headline2Style}"/>
                    <TextBlock Text="Headline 3" Style="{DynamicResource Headline3Style}"/>
                    <TextBlock Text="Caption" Style="{DynamicResource CaptionStyle}"/>
                    <TextBlock Text="A quick brown fox jump over a lazy dog" TextWrapping="WrapWithOverflow"/>
                    <mt:TextInput Label="Textfield" SupportingText="Supporting Text" Text="TestField"/>
                    <ComboBox SelectedIndex="0">
                        <ComboBox.Items>
                            <ComboBoxItem>
                                <TextBlock Text="Test 0123456789"/>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <TextBlock Text="Test 2"/>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <TextBlock Text="Test 3"/>
                            </ComboBoxItem>
                        </ComboBox.Items>
                    </ComboBox>
                    <ProgressBar Width="100" IsIndeterminate="True"/>
                    <ProgressBar Style="{DynamicResource CircularProgressIndicator}" IsIndeterminate="True"/>
                    <ToggleButton IsChecked="True"/>
                </StackPanel>
            </Border>
            <Border Style="{DynamicResource ElevatedCardSecondary}" Width="200">
                <StackPanel>
                    <TextBlock Text="Headline 1" Style="{DynamicResource Headline1Style}"/>
                    <TextBlock Text="Headline 2" Style="{DynamicResource Headline2Style}"/>
                    <TextBlock Text="Headline 3" Style="{DynamicResource Headline3Style}"/>
                    <TextBlock Text="Caption" Style="{DynamicResource CaptionStyle}"/>
                    <TextBlock Text="A quick brown fox jump over a lazy dog" TextWrapping="WrapWithOverflow"/>
                    <mt:TextInput Label="Textfield" SupportingText="Supporting Text" Text="TestField"/>
                    <ComboBox SelectedIndex="0">
                        <ComboBox.Items>
                            <ComboBoxItem>
                                <TextBlock Text="Test 1"/>
                            </ComboBoxItem>
                        </ComboBox.Items>
                    </ComboBox>
                    <ProgressBar Width="100" IsIndeterminate="True"/>
                    <ProgressBar Style="{DynamicResource CircularProgressIndicator}" IsIndeterminate="True"/>
                    <ToggleButton IsChecked="True"/>
                </StackPanel>
            </Border>
            <Border Style="{DynamicResource OutlinedCard}" Width="200">
                <StackPanel>
                    <TextBlock Text="Headline 1" Style="{DynamicResource Headline1Style}"/>
                    <TextBlock Text="Headline 2" Style="{DynamicResource Headline2Style}"/>
                    <TextBlock Text="Headline 3" Style="{DynamicResource Headline3Style}"/>
                    <TextBlock Text="Caption" Style="{DynamicResource CaptionStyle}"/>
                    <TextBlock Text="A quick brown fox jump over a lazy dog" TextWrapping="WrapWithOverflow"/>
                    <mt:TextInput Label="Textfield" SupportingText="Supporting Text" Text="TestField"/>
                    <ComboBox SelectedIndex="0">
                        <ComboBox.Items>
                            <ComboBoxItem>
                                <TextBlock Text="Test 1"/>
                            </ComboBoxItem>
                        </ComboBox.Items>
                    </ComboBox>
                    <ProgressBar Width="100" IsIndeterminate="True"/>
                    <ProgressBar Style="{DynamicResource CircularProgressIndicator}" IsIndeterminate="True"/>
                    <ToggleButton IsChecked="True"/>
                </StackPanel>
            </Border>
            <Border Style="{DynamicResource OutlinedCardSecondary}" Width="200">
                <StackPanel>
                    <TextBlock Text="Headline 1" Style="{DynamicResource Headline1Style}"/>
                    <TextBlock Text="Headline 2" Style="{DynamicResource Headline2Style}"/>
                    <TextBlock Text="Headline 3" Style="{DynamicResource Headline3Style}"/>
                    <TextBlock Text="Caption" Style="{DynamicResource CaptionStyle}"/>
                    <TextBlock Text="A quick brown fox jump over a lazy dog" TextWrapping="WrapWithOverflow"/>
                    <mt:TextInput Label="Textfield" SupportingText="Supporting Text" Text="TestField"/>
                    <ComboBox SelectedIndex="0">
                        <ComboBox.Items>
                            <ComboBoxItem>
                                <TextBlock Text="Test 1"/>
                            </ComboBoxItem>
                        </ComboBox.Items>
                    </ComboBox>
                    <ProgressBar Width="100" IsIndeterminate="True"/>
                    <ProgressBar Style="{DynamicResource CircularProgressIndicator}" IsIndeterminate="True"/>
                    <ToggleButton IsChecked="True"/>
                </StackPanel>
            </Border>

            <ProgressBar Width="100" Value="30"/>
            <ProgressBar Width="100" IsIndeterminate="True"/>
            <ProgressBar Style="{DynamicResource LinearProgressIndicator}" Width="100" Value="30"/>
            <ProgressBar Style="{DynamicResource LinearProgressIndicator}" Width="100" IsIndeterminate="True"/>
            <ProgressBar Style="{DynamicResource CircularProgressIndicator}" IsIndeterminate="True" Height="32"/>
            <ProgressBar Style="{DynamicResource CircularProgressIndicator}" Value="30" Height="32"/>
            <ToggleButton/>
            <ToggleButton IsChecked="True"/>
            <TextBlock Text="A quick brown fox jump over a lazy dog" TextWrapping="WrapWithOverflow"/>
        </WrapPanel>
    </Border>
</Page>
